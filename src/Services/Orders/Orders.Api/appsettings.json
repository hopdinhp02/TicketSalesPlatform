{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5432;Database=TicketSalesPlatform;Username=user;Password=password"
  },
  "Authentication": {
    "Authority": "http://localhost:5001"
  },
  "MessageBroker": {
    "Host": "localhost"
  },
  "Services": {
    "EventsApiUrl": "http://localhost:7001",
    "InventoryApiUrl": "http://localhost:7004"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithTraceId",
      "WithSpanId"
    ],
    "Properties": {
      "Application": "TicketSalesPlatform.Orders.Api"
    }
  }
}
